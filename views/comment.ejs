<% post.comments.forEach(function (comment, index) { %>
<div class="ui comments">
    <div class="comment">
        <a class="avatar">
           <i class="user icon"></i>
        </a>
        <div class="content">
            <a class="author"><%= comment.name %></a>
            <div class="metadata">
                <span class="date"><%= comment.time %></span>
            </div>
            <div class="text">
                <%- comment.content %>
            </div>
        </div>
        <div class="actions">
            <a class="reply">Reply</a>
            <a class="save">Save</a>
            <a class="hide">Hide</a>
            <a>
                <i class="expand icon"></i>
                Full-screen
            </a>
        </div>
    </div>
</div>
