<form class="ui form" method="post">
    <% if(user){ %>
    <div class="filed">
    <label>姓名: </label><input type="text" name="name" value="<%= user.name %>"></div>
    <div class="field">
    <label>邮箱: </label><input type="text" name="email" value="<%= user.email %>"></div>
    <div class="field">
    <label>网址: </label><input type="text" name="website" value="/u/<%= user.name %>"></div>
    <% }else{ %>
    <div class="field">
    <label >姓名: </label> <input type="text" name="name"> </div>
    <div class="field">
    <label>邮箱: </label><input type="text" name="email"> </div>
    <div class="field">
    <label>网址: </label><input type="text" name="website"> </div>
    <% } %>
    <div class="field">
        <textarea name="content" name="content" cols="80" rows="5"></textarea>
    </div>
    <input class="ui blue  button" type="submit" value="留言">
</form>
